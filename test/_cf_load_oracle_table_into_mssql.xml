<?xml version="1.0" ?>
<config>
  <description>copy oracle table into ssms table</description>
  <source_type>sql_table</source_type>
  <target_type>sql_table</target_type>
  <copy id="countries">
    <source schema_name="HR" table_name="COUNTRIES">
      <connection_string>
        <add conn_str="DRIVER={Oracle in instantclient_12_2};DBQ=localhost:1521/xe;UID=HR;PWD=Bintang"/>
      </connection_string>
    </source>
    <target schema_name="dbo" table_name="countries">
      <connection_string>
        <add conn_str="DRIVER={ODBC Driver 11 for SQL Server};SERVER=LATITUDE;PORT=1443;DATABASE=Test;UID=user_name;PWD=password;"/>
      </connection_string>
    </target>
    <column_mapping source="COUNTRY_ID" target="COUNTRY_ID"/>
    <column_mapping source="COUNTRY_NAME" target="COUNTRY_NAME"/>
    <column_mapping source="REGION_ID" target="REGION_ID"/>
  </copy>
</config>
